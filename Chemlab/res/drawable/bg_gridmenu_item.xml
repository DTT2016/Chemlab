<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="0.5px" android:color="@drawable/line" />
            <gradient android:angle="270.0" android:endColor="@drawable/bg_gray" android:startColor="@drawable/bg_gray" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <gradient android:angle="270.0" android:endColor="@drawable/bg_gray" android:startColor="@drawable/bg_gray" />
            <stroke android:width="0.5px" android:color="@drawable/line" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="270.0" android:endColor="@drawable/fg_white" android:startColor="@drawable/fg_white" />
            <stroke android:width="0.5px" android:color="@drawable/line" />
        </shape>
    </item>

</selector>