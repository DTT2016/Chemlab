<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gray"
    android:orientation="vertical" >

    <include layout="@layout/activity_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_margin_top"
        android:background="@drawable/fg_white"
        android:orientation="vertical"
        android:padding="10dp" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="指定搜索内容"
            android:textColor="#6e6e6e" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/search_contact"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="联系人"
                android:textColor="@color/bbutton_success"
                android:textSize="16sp" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:background="#f3f3f3" />

            <TextView
                android:id="@+id/search_drug"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="药品"
                android:textColor="@color/bbutton_success"
                android:textSize="16sp" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:background="#f3f3f3" />

            <TextView
                android:id="@+id/search_mix"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="试剂"
                android:textColor="@color/bbutton_success"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/search_equipment"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="仪器"
                android:textColor="@color/bbutton_success"
                android:textSize="16sp" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:background="#f3f3f3" />

            <TextView
                android:id="@+id/search_course"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="课程"
                android:textColor="@color/bbutton_success"
                android:textSize="16sp" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:background="#f3f3f3" />

            <TextView
                android:id="@+id/search_lab"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="实验"
                android:textColor="@color/bbutton_success"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>